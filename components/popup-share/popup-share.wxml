<view class="popup-share">
    <view class="popup-wrapper">
        <view class="popup-header">分享到</view>
        <view class="popup-body">
            <view class="share-panel">
                <button class="share-item" openType="share" type="default">
                    <view class="share-item-icon icon-wx"></view>
                    <view class="share-item-text">微信好友</view>
                </button>
                <view bindtap="__e" class="share-item" data-event-opts="{{[ [ 'tap',[ [ 'renderPoster',['$event'] ] ] ] ]}}">
                    <view class="share-item-icon icon-poster"></view>
                    <view class="share-item-text">生成海报</view>
                </view>
                <view bindtap="__e" class="share-item" data-event-opts="{{[ [ 'tap',[ [ 'copeLink',['$event'] ] ] ] ]}}">
                    <view class="share-item-icon icon-link"></view>
                    <view class="share-item-text">复制链接</view>
                </view>
            </view>
        </view>
        <view class="popup-footer">
            <button bindtap="__e" class="popup-submit" data-event-opts="{{[ [ 'tap',[ [ 'handleCancel',['$event'] ] ] ] ]}}">取消</button>
        </view>
    </view>
</view>
