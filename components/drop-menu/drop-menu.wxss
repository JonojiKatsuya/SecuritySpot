wx-button.base {
    background: #9b0000;
    color: #fff;
    line-height: 74rpx
}

wx-button.base:active {
    background: #820404;
    color: #fff
}

wx-button.default {
    background: #fff;
    color: #333;
    font-size: 28rpx;
    line-height: 60rpx
}

wx-button.default:active {
    background: #f8f8f8
}

wx-input .input-placeholder {
    color: #666!important;
    font-size: 24rpx
}

wx-uni-radio .uni-radio-input.uni-radio-input-checked {
    background: #9b0000!important;
    border-color: #9b0000!important
}

.drop-menu {
    position: relative
}

.drop-btn {
    position: relative
}

.drop-btn,.drop-btn-box {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: center;
    justify-content: center
}

.drop-btn-box {
    color: #333;
    font-size: 32rpx
}

.icon-drop-btn {
    background: url(data:image/png;base64,) no-repeat 50%;
    background-size: 100% 100%;
    height: 10rpx;
    margin: 0 0 0 14rpx;
    width: 16rpx
}

.drop-panel {
    background-color: #fff;
    box-shadow: 0 0 5px #d3e2e2;
    left: -10rpx;
    overflow: hidden;
    position: absolute;
    top: 48rpx;
    transition: all .3s;
    width: 150rpx;
    z-index: 9
}

.drop-item {
    border-bottom: 1rpx solid #d3e2e2;
    color: #333;
    font-size: 24rpx;
    padding: 20rpx 24rpx;
    text-align: center
}

.drop-item-highlight,.drop-item:hover {
    color: #9b0000
}

.open-panel {
    max-height: 999rpx
}

.close-panel {
    max-height: 0
}
